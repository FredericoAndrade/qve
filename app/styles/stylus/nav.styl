nav
  width 100%
  box-sizing border-box
  font-size 1.3em
  display inline-block
  padding 30px 0

  a.logo
    font-weight 800
    float left
    text-transform uppercase

    &.active
      font-style initial


    &:hover
      .pinwheel
        transform rotateZ(-240deg)
        transition transform 2s cubic-bezier(0,.54,0,1)

    img
      &.phoneLogo
        display none

      &.pinwheel
        width 50px
        margin -9px 5px -2px 0

      &.logoType
        height 60px
        margin -14px 5px -7px 0

  button.mobileNav
    display none

  ul
    float right
    padding 0
    margin auto
    list-style-type none
    display inline-block

    li
      float left
      margin-right 1em

      a
        display block
        height 22px

        &:hover
          font-weight 300